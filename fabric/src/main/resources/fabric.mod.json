{
  "schemaVersion": 1,
  "id": "sleepcycle",
  "version": "${version}",
  "name": "Sleep Cycle",
  "description": "Enhances the sleeping mechanics by allowing time to pass progressively while players are asleep.",
  "authors": [
    "VgLevelUp"
  ],
  "contact": {
    "homepage": "https://modrinth.com/mod/sleepcycle",
    "sources": "https://github.com/Vg34100/Minecraft-SleepCycle",
    "issues": "https://github.com/Vg34100/Minecraft-SleepCycle/issues"

  },
  "license": "MIT",
  "icon": "assets/sleepcycle/icon.png",
  "environment": "*",
  "entrypoints": {
    "main": [
      "net.vg.sleepcycle.fabric.SleepCycleFabric"
    ],
    "client": [
      "net.vg.sleepcycle.fabric.client.SleepCycleFabricClient"
    ],
    "modmenu": [
      "net.vg.sleepcycle.fabric.modmenu.StructureVoidableModMenu"
    ],
    "fabric-datagen": [
      "net.vg.sleepcycle.data.ModDataGenerator"
    ]
  },
  "mixins": [
    "sleepcycle.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=0.16.2",
    "minecraft": "~1.21",
    "java": ">=21",
    "architectury": ">=13.0.2",
    "fabric-api": "*"
  },
  "suggests": {
    "modmenu": "*"
  },
  "custom": {
    "modmenu" : {
      "links": {
        "modmenu.modrinth": "https://modrinth.com/mod/sleepcycle",
        "modmenu.discord": "https://discord.gg/Xfcysgn3jU",
        "modmenu.donate": "https://buymeacoffee.com/vglevelup"
      }
    }
  }
}
